<footer id="footer" class="footer col-xs-12">
    <div class="{{ container == true ? 'container-fluid' : 'container' }}">
        <div class="ftrtop" style="width: 100%;">
            <div class="col-md-4 col-xs-6 footer-info">
                <p>{{ lang.site_footer.column_text }}</p>
                <span>{{ lang.site_footer.column_street }}</span><br>
                <span>{{ lang.site_footer.column_address }}</span><br>
                <span class="glyphicon glyphicon-phone"></span>
                <span>{{ lang.site_footer.column_phone }}</span><br>
                <span class="glyphicon glyphicon-envelope"></span>
                <span>{{ lang.site_footer.column_email }}</span><br>
            </div>
            <div class="col-xs-6 col-md-4">
                <ul>
                    <li><b>Categorieën</b></li>
                    {% for category in categories %}
                        <li>
                            <a href="{{ lang.url.category_products ~ category.id }}">{{ category.name }}</a>
                        </li>
                    {% else %}
                        {#<li style="text-align: center; font-weight: bold">Geen categorieën</li>#}
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-4 col-xs-12">
                <!-- Pages menu -->
                {% include 'blocks/pages_menu.html.twig' %}
            </div>

        </div>
    </div>
    <div class="col-xs-12 ftrbtm">
        <p>© {{ "now"|date('Y') }} - {{ lang.site_footer.bottom_bar_text }} {{ site_name }}</p>
    </div>
    <div class="footer-links text-center full-width">

        <span class="full-width">Powered by <a href="https://dropcart.nl">DropCart v3.0</a></span>
    </div>
</footer>
