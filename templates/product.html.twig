{% extends "layouts/layout.html.twig" %}

{% block content %}

    <h2 class="text-capitalize bold col-12">{{ page_title }}</h2>

    <div class="col-12 product-page no-padding">
        <div class="col-md-6 center mag">
            <img src="{{ product.images|length > 0 ? product.images[0].url : '/images/no_image.gif' }}" class="featured-img" alt="{{ product.name }}" data-toggle="magnify">
        </div>

        <div class="col-md-6">
            <br />
            <div class="fill">
                {% if product.price_details %}
                    <div class="price-details fill">
                        <h1>
                            &euro;&nbsp;{{ (product.price_details.piece_price.in)|number_format(2, ',', '.') }}
                        </h1>
                        <span>&nbsp;Incl. BTW</span>
                    </div>

                    <!-- PRODUCT STOCK -->
                    <div class="stock-shipping-status">
                        {% if product.stock %}

                            {% if product.stock > 10 %}
                                <div class="badge badge-success">Ruimschoots op voorraad</div>
                            {% else %}
                                <div class="badge badge-success">Op voorraad</div>
                            {% endif %}

                            {% if product.shipping_details.shipping_days %}
                                <div class="badge badge-info">Levertijd {{ product.shipping_details.shipping_days }} werkdag(en)</div>
                            {% else %}
                                <div class="badge badge-info">Levertijd 1-3 werkdag(en)</div>
                            {% endif %}
                        {% else %}
                            <div class="badge badge-warning">Niet op voorraad</div>
                        {% endif %}
                    </div>
                    <br />
                    <div class="col-12 col-md-8 product-buy-amount select-quantity">
                        <input class="form-control product-quantity" min="1" value="1" type="number">

                        <div class="col-8 no-padding">
                            <a href="{{ lang.url.shopping_cart_add ~ product.id }}/1" data-product-id="{{ product.id }}"
                               data-product-price="{{ (product.price_details.piece_price.in) }}"
                               class="btn btn btn-block btn-success order-link">
                                In winkelmand
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="product-specs fill">
                <h4>Productspecificaties</h4>
                <dl class="specs-list fill">
                    {#<dt>EAN</dt>#}
                    {#<dd>{{ product.ean }}</dd>#}
                    {#<hr>#}
                    <dt>SKU</dt>
                    <dd>{{ product.sku }}</dd>
                </dl>
                <br />
                <br />
            </div>

            <div class="product-description">
                <h4>Product beschrijving</h4>
                <!-- PRODUCT DESCRIPTION -->
                <p>{{ product.description ? product.description : product.name ~ ' wordt binnen 24 uur verzonden mits op voorraad. Dat is de service van ' ~ site_name ~ '!' }}</p>
            </div>
        </div>
    </div>

{% endblock %}

{% block post_js %}
    {{ parent() }}
    {% include 'blocks/ajax_shoppingcart.html.twig' %}
{% endblock %}