{% block styles %}
    {# STYLING #}
    <style>
        .header-bar {
            position: absolute;
            top: 0;
            width: 100%;
            overflow: hidden;
            height: 40px;
            background: #f5f5f5;
            border-bottom: 2px solid #ddd;
            color: #777;
        }
        .header-bar .col-xs-4 {
            padding: 0;
            font-size: 16px;
            text-transform: uppercase;
            margin-top: 3px;
            text-align: center;
        }
        .header-bar .glyphicon {
            padding-right: 10px;
        }

        @media screen and (max-width: 768px) and (min-width: 469px) {
            .header-bar .col-xs-4 {
                font-size: 11px;
            }
        }

        @media screen and (max-width: 468px) {
            .header-bar {
                height: 60px;
            }

            .header-bar .col-xs-4 {
                font-size: 11px;
            }
        }
    </style>
{% endblock %}

{# HTML #}
<div class="header-bar">
    <div class="container" style="padding: 0;">
        <div class="col-xs-12" style="padding: 5px;">
            <div class="col-xs-4">
                <span class="glyphicon glyphicon-ok"></span>
                <span>VOOR 20.00 UUR BESTELD, MORGEN IN HUIS *</span>
            </div>
            <div class="col-xs-4">
                <span class="glyphicon glyphicon-ok"></span>
                <span>Top kwaliteit cartridges</span>
            </div>
            <div class="col-xs-4">
                <span class="glyphicon glyphicon-ok"></span>
                <span>Superdeals bij {{ site_name }}</span>
            </div>
        </div>
    </div>
</div>